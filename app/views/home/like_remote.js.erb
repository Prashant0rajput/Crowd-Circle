
if($('#post_'+<%= @post_id_like %>).text()==='like'){
	$('#post_'+<%= @post_id_like %>).text('liked');
	$('#post_'+<%= @post_id_like %>).removeClass("fa fa-star-o");
	$('#post_'+<%= @post_id_like %>).addClass("fa fa-star");

}else{
	$('#post_'+<%= @post_id_like %>).text('like');
	$('#post_'+<%= @post_id_like %>).removeAttr("style");
	$('#post_'+<%= @post_id_like %>).removeClass("fa fa-star");
	$('#post_'+<%= @post_id_like %>).addClass("fa fa-star-o");
}
